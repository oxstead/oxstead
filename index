    document.getElementById('year').textContent = new Date().getFullYear();
    function handleSubmit(e){
      e.preventDefault();
      const status = document.getElementById('form-status');
      status.textContent = "Thanks! This demo form doesn’t send email yet.";
      e.target.reset();
      return false;
